{
  "name": "Grow-IoT",
  "version": "0.5.0",
  "private": true,
  "description": "A meteor application for the Internet of Living things.",
  "repository": {
    "type": "git",
    "url": "https://github.com/CommonGarden/Grow-IoT"
  },
  "scripts": {
    "start": "yarn install && meteor",
    "lint": "eslint .",
    "postinstall": "opencollective postinstall"
  },
  "keywords": [
    "IoT",
    "Internet of Things",
    "thing"
  ],
  "author": "CommonGarden",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/CommonGarden/Grow-IoT/issues"
  },
  "homepage": "https://github.com/CommonGarden/Grow-IoT",
  "dependencies": {
    "aws-sdk": "^2.115.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "bson-ext": "^1.0.1",
    "bufferutil": "^3.0.2",
    "cheerio": "^0.22.0",
    "coap": "^0.21.0",
    "elasticsearch": "^12.1.3",
    "enzyme": "^2.9.1",
    "fibers": "^2.0.0",
    "gridfs-stream": "^1.1.1",
    "influx": "^5.0.7",
    "inquirer": "^3.2.3",
    "justgage": "^1.2.2",
    "material-ui": "^0.19.1",
    "moment": "^2.18.1",
    "mongodb": "^2.2.31",
    "monq": "^0.3.7",
    "opencollective": "^1.0.3",
    "pondjs": "^0.8.5",
    "raphael": "^2.2.7",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-flexbox-grid": "^1.1.5",
    "react-grid-layout": "^0.15.2",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-svg-gauge": "^1.0.5",
    "react-tap-event-plugin": "^2.0.1",
    "react-timeseries-charts": "^0.12.8",
    "react-title-component": "^1.0.1",
    "redux": "^3.7.2",
    "utf-8-validate": "^3.0.3",
    "weather-icons": "^1.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.6.1",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-meteor": "^4.1.4",
    "lerna": "^2.1.2",
    "redux-devtools": "^3.4.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {}
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,mjs}": "eslint"
  },
  "workspaces": [
    "lib/*",
    "examples/*",
    "things/*",
    "growfiles/*"
  ],
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/Grow-IoT",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  }
}
